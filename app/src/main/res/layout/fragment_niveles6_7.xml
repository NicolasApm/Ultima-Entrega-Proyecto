<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContenedorNiv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".view.GameSecNumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Txtv11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/Txtv12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/Txtv13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/Txtv14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/Txtv21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/Txtv22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/Txtv23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/Txtv24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="0sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Compare"
            style="@style/TeclaNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparar" />

        <Button
            android:id="@+id/Siguiente"
            style="@style/TeclaNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente" />

    </LinearLayout>

</LinearLayout>